---
import { changeLanguage, t } from "i18next";
import ProyectoCard from "../../../components/ProyectoCard.astro";
import Global from "../../../layouts/Global.astro";

changeLanguage("en");

const proyectosLaborales = [
    {
        title: t("projects.items.probienCatalog.title"),
        portada: "/probiencms.png",
        description: t("projects.items.probienCatalog.description"),
        features: t("projects.items.probienCatalog.features", { returnObjects: true }) as string[],
        href: "https://www.probien.com.mx/",
        technologies: [
            "Next.js",
            "Payload CMS",
            "Tailwind CSS",
            "TypeScript",
            "InstantSearch.js",
            "Meilisearch",
            "Vercel",
        ],
    },
    {
        title: t("projects.items.probienCRM.title"),
        portada: "/ProbienLogo.png",
        description: t("projects.items.probienCRM.description"),
        features: t("projects.items.probienCRM.features", { returnObjects: true }) as string[],
        technologies: [
            "Next.js",
            "Tailwind CSS",
            "Supabase",
            "Vercel",
            "Prisma ORM",
            "InstantSearch.js",
            "Meilisearch",
        ],
    },
];
const proyectosHobby = [
    {
        title: t("projects.items.webpwizard.title"),
        portada: "/webpwizard.png",
        href: "https://www.webpwizard.com/",
        description: t("projects.items.webpwizard.description"),
        features: t("projects.items.webpwizard.features", { returnObjects: true }) as string[],
        technologies: ["Nextjs", "Tailwindcss", "Vercel"],
    },
    {
        title: t("projects.items.portfolio.title"),
        portada: "/portfolio.png",
        href: "https://github.com/JFranciscoRobles/jfrankrobles-portafolio",
        description: t("projects.items.portfolio.description"),
        features: t("projects.items.portfolio.features", { returnObjects: true }) as string[],
        technologies: ["Astro", "TypeScript", "Tailwind CSS", "astro-i18next"],
    },
];
---

<Global
  pageTitle={`${t("projects.title")} - J. Francisco Robles`}
  description="Explora mi portafolio de proyectos web: CRMs personalizados, plataformas de e-commerce, sitios con CMS headless y aplicaciones con Next.js, React y Node.js."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-gray-50 to-white py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {t("projects.featuredProjects")}
      </h1>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
        {t("projects.featuredProjectsDesc")}
      </p>
    </div>
  </section>

  <!-- Proyectos Laborales -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <div class="flex items-center gap-3 mb-3">
          <div class="w-1 h-8 bg-primary rounded-full"></div>
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
            {t("projects.workProjects")}
          </h2>
        </div>
        <p class="text-gray-600 text-lg ml-7">
          {t("projects.workProjectsDesc")}
        </p>
      </div>

      <div class="space-y-8">
        {
          proyectosLaborales.map((proyecto) => (
            <ProyectoCard proyecto={proyecto} />
          ))
        }
      </div>
    </div>
  </section>

  <!-- Proyectos Personales -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12">
        <div class="flex items-center gap-3 mb-3">
          <div class="w-1 h-8 bg-primary rounded-full"></div>
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
            {t("projects.personalProjects")}
          </h2>
        </div>
        <p class="text-gray-600 text-lg ml-7">
          {t("projects.personalProjectsDesc")}
        </p>
      </div>

      <div class="space-y-8">
        {proyectosHobby.map((proyecto) => <ProyectoCard proyecto={proyecto} />)}
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div
        class="bg-gradient-to-br from-primary/5 to-primary/10 rounded-2xl p-8 md:p-12 border-2 border-primary/20"
      >
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          {t("projects.projectInMind")}
        </h2>
        <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
          {t("projects.projectInMindDesc")}
        </p>
        <a
          href="mailto:josefrancisco.roblesacosta@gmail.com"
          class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-xl hover:bg-primary/90 font-semibold transition shadow-lg hover:shadow-xl text-lg"
        >
          {t("projects.startConversation")}
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Global>

---
import Works from "../../components/Works.astro";
import Global from "../../layouts/Global.astro";
import { SOCIAL_LINKS } from "../../consts";
import i18next, { t, changeLanguage } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";

changeLanguage("en");
---

<Global
  pageTitle="Sobre mí - J. Francisco Robles"
  description="Conoce mi trayectoria profesional como desarrollador full-stack. Experiencia en desarrollo de CRMs, e-commerce y soluciones web empresariales con JavaScript y tecnologías modernas."
>
  <HeadHrefLangs slot="head" />
  <main class="flex flex-col w-full items-center px-6 py-12 gap-16 max-w-5xl mx-auto">
    <!-- Introducción -->
    <section class="w-full">
      <h1 class="font-black text-4xl md:text-5xl text-gray-900 mb-8">
        {t("about.title")}
      </h1>

      <div class="prose prose-lg max-w-none text-gray-700 space-y-6">
        <p class="text-xl leading-relaxed" set:html={t("about.intro1")} />
        <p class="text-lg leading-relaxed" set:html={t("about.intro2")} />
        <p class="text-lg leading-relaxed" set:html={t("about.intro3")} />
        <p class="text-lg leading-relaxed" set:html={t("about.intro4")} />
      </div>
    </section>

    <!-- Lo que hago -->
    <section class="w-full">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-8">
        {t("about.whatIDo")}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">
            {t("about.frontend")}
          </h3>
          <p class="text-gray-700">
            {t("about.frontendDesc")}
          </p>
        </div>

        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">
            {t("about.backend")}
          </h3>
          <p class="text-gray-700">
            {t("about.backendDesc")}
          </p>
        </div>

        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">
            {t("about.search")}
          </h3>
          <p class="text-gray-700">
            {t("about.searchDesc")}
          </p>
        </div>

        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">
            {t("about.architecture")}
          </h3>
          <p class="text-gray-700">
            {t("about.architectureDesc")}
          </p>
        </div>
      </div>
    </section>

    <!-- Mi enfoque -->
    <section class="w-full bg-gray-50 rounded-2xl p-8 md:p-12">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-6">
        {t("about.approach")}
      </h2>

      <div class="space-y-4 text-gray-700">
        <div class="flex gap-3">
          <span class="text-gray-900 font-bold text-xl">→</span>
          <p class="flex-1">
            <strong>{t("about.cleanCode")}</strong> {t("about.cleanCodeDesc")}
          </p>
        </div>

        <div class="flex gap-3">
          <span class="text-gray-900 font-bold text-xl">→</span>
          <p class="flex-1">
            <strong>{t("about.learning")}</strong> {t("about.learningDesc")}
          </p>
        </div>

        <div class="flex gap-3">
          <span class="text-gray-900 font-bold text-xl">→</span>
          <p class="flex-1">
            <strong>{t("about.userFirst")}</strong> {t("about.userFirstDesc")}
          </p>
        </div>

        <div class="flex gap-3">
          <span class="text-gray-900 font-bold text-xl">→</span>
          <p class="flex-1">
            <strong>{t("about.performance")}</strong> {t("about.performanceDesc")}
          </p>
        </div>
      </div>
    </section>

    <!-- Experiencia -->
    <Works />

    <!-- Contacto -->
    <section class="w-full text-center border-t-2 border-gray-200 pt-16">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-4">
        {t("about.letsTalk")}
      </h2>
      <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
        {t("about.letsTalkDesc")}
      </p>
      <a
        href={`mailto:${SOCIAL_LINKS.email}`}
        class="inline-flex items-center gap-2 px-8 py-4 bg-gray-900 text-white text-lg font-semibold rounded-lg hover:bg-gray-800 transition-colors shadow-lg hover:shadow-xl"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
          ></path>
        </svg>
        {t("about.sendMessage")}
      </a>
    </section>
  </main>
</Global>

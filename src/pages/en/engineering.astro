---
import Global from "../../layouts/Global.astro";
import { SOCIAL_LINKS } from "../../consts";
import i18next, { t, changeLanguage } from "i18next";
import { HeadHrefLangs } from "astro-i18next/components";

changeLanguage("en");
---

<Global
  pageTitle="Software Architect - J. Francisco Robles"
  description="Technical profile of J. Francisco Robles, Software Architect with over 4 years of experience in complex enterprise systems, scalable APIs and modern architecture."
>
  <HeadHrefLangs slot="head" />
  <main class="flex flex-col w-full items-center px-6 py-12 gap-16 max-w-6xl mx-auto">

    <!-- Hero Section -->
    <section class="w-full text-center">
      <h1 class="font-black text-4xl md:text-5xl text-gray-900 mb-4">
        {t("engineering.title")}
      </h1>
      <p class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
        {t("engineering.subtitle")}
      </p>
      <div class="flex flex-wrap gap-4 mt-8 justify-center">
        <a
          href="/cv.pdf"
          download
          class="inline-flex items-center gap-2 px-8 py-4 bg-gray-900 text-white text-lg font-semibold rounded-lg hover:bg-gray-800 transition-colors shadow-lg hover:shadow-xl"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          {t("engineering.downloadCV")}
        </a>
        <a
          href={SOCIAL_LINKS.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-gray-900 border-2 border-gray-200 text-lg font-semibold rounded-lg hover:border-gray-900 transition-colors"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8a6 6 0 0 1 6 6v6h-4v-6a2 2 0 0 0-4 0v6h-4v-12h4M2 9h4v12H2z"></path>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
          {t("engineering.contactLinkedIn")}
        </a>
      </div>
    </section>

    <!-- Perfil Profesional -->
    <section class="w-full">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-6">
        {t("engineering.profile")}
      </h2>
      <p class="text-lg text-gray-700 mb-4 leading-relaxed">
        {t("engineering.profileDesc")}
      </p>
      <h3 class="text-xl font-bold text-gray-900 mt-6 mb-3">
        {t("engineering.expertIn")}
      </h3>
      <ul class="space-y-2">
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">→</span>
          <span class="text-gray-700 text-lg">{t("engineering.expertise1")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">→</span>
          <span class="text-gray-700 text-lg">{t("engineering.expertise2")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">→</span>
          <span class="text-gray-700 text-lg">{t("engineering.expertise3")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">→</span>
          <span class="text-gray-700 text-lg">{t("engineering.expertise4")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">→</span>
          <span class="text-gray-700 text-lg">{t("engineering.expertise5")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">→</span>
          <span class="text-gray-700 text-lg">{t("engineering.expertise6")}</span>
        </li>
      </ul>
    </section>

    <!-- Experiencia Profesional -->
    <section class="w-full bg-gray-50 rounded-2xl p-8 md:p-12">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-8">
        {t("engineering.experience")}
      </h2>

      <div class="border-l-4 border-gray-900 pl-6">
        <div class="mb-6">
          <h3 class="text-2xl font-bold text-gray-900">{t("engineering.company")}</h3>
          <p class="text-lg text-gray-600 font-semibold">{t("engineering.position")}</p>
          <p class="text-gray-600">{t("engineering.date")} | {t("engineering.location")}</p>
          <p class="text-gray-700 mt-2">{t("engineering.companyDesc")}</p>
        </div>

        <h4 class="text-xl font-bold text-gray-900 mb-4">{t("engineering.featuredProjects")}</h4>

        <!-- Proyecto 1 -->
        <div class="mb-6 bg-white rounded-lg p-6">
          <h5 class="text-lg font-bold text-gray-900 mb-2">{t("engineering.project1Title")}</h5>
          <p class="text-gray-700 mb-2">{t("engineering.project1Desc")}</p>
          <p class="text-sm text-gray-600 mb-1"><strong>{t("engineering.project1Stack")}</strong></p>
          <p class="text-sm text-gray-600"><strong>{t("engineering.project1Result")}</strong></p>
        </div>

        <!-- Proyecto 2 -->
        <div class="mb-6 bg-white rounded-lg p-6">
          <h5 class="text-lg font-bold text-gray-900 mb-2">{t("engineering.project2Title")}</h5>
          <p class="text-gray-700 mb-2">{t("engineering.project2Desc")}</p>
          <p class="text-sm text-gray-600"><strong>{t("engineering.project2Stack")}</strong></p>
        </div>

        <!-- Proyecto 3 -->
        <div class="mb-6 bg-white rounded-lg p-6">
          <h5 class="text-lg font-bold text-gray-900 mb-2">{t("engineering.project3Title")}</h5>
          <p class="text-gray-700">{t("engineering.project3Desc")}</p>
        </div>

        <h4 class="text-xl font-bold text-gray-900 mb-3 mt-8">{t("engineering.skillsDeveloped")}</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
          <div class="flex items-center gap-2 bg-white rounded-lg px-4 py-2">
            <span class="text-gray-900">✓</span>
            <span class="text-gray-700">{t("engineering.skill1")}</span>
          </div>
          <div class="flex items-center gap-2 bg-white rounded-lg px-4 py-2">
            <span class="text-gray-900">✓</span>
            <span class="text-gray-700">{t("engineering.skill2")}</span>
          </div>
          <div class="flex items-center gap-2 bg-white rounded-lg px-4 py-2">
            <span class="text-gray-900">✓</span>
            <span class="text-gray-700">{t("engineering.skill3")}</span>
          </div>
          <div class="flex items-center gap-2 bg-white rounded-lg px-4 py-2">
            <span class="text-gray-900">✓</span>
            <span class="text-gray-700">{t("engineering.skill4")}</span>
          </div>
          <div class="flex items-center gap-2 bg-white rounded-lg px-4 py-2">
            <span class="text-gray-900">✓</span>
            <span class="text-gray-700">{t("engineering.skill5")}</span>
          </div>
          <div class="flex items-center gap-2 bg-white rounded-lg px-4 py-2">
            <span class="text-gray-900">✓</span>
            <span class="text-gray-700">{t("engineering.skill6")}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Stack Tecnológico -->
    <section class="w-full">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-8">
        {t("engineering.techStack")}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Frontend -->
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.frontend")}</h3>
          <p class="text-gray-700">{t("engineering.frontendTech")}</p>
        </div>

        <!-- Backend -->
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.backend")}</h3>
          <p class="text-gray-700">{t("engineering.backendTech")}</p>
        </div>

        <!-- Database -->
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.database")}</h3>
          <p class="text-gray-700">{t("engineering.databaseTech")}</p>
        </div>

        <!-- Search -->
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.search")}</h3>
          <p class="text-gray-700">{t("engineering.searchTech")}</p>
        </div>

        <!-- CMS -->
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.cms")}</h3>
          <p class="text-gray-700">{t("engineering.cmsTech")}</p>
        </div>

        <!-- DevOps -->
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.devops")}</h3>
          <p class="text-gray-700">{t("engineering.devopsTech")}</p>
        </div>
      </div>
    </section>

    <!-- Logros Técnicos -->
    <section class="w-full bg-gray-50 rounded-2xl p-8 md:p-12">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-6">
        {t("engineering.achievements")}
      </h2>
      <ul class="space-y-3">
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">✓</span>
          <span class="text-gray-700 text-lg">{t("engineering.achievement1")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">✓</span>
          <span class="text-gray-700 text-lg">{t("engineering.achievement2")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">✓</span>
          <span class="text-gray-700 text-lg">{t("engineering.achievement3")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">✓</span>
          <span class="text-gray-700 text-lg">{t("engineering.achievement4")}</span>
        </li>
        <li class="flex items-start gap-3">
          <span class="text-gray-900 font-bold text-xl mt-1">✓</span>
          <span class="text-gray-700 text-lg">{t("engineering.achievement5")}</span>
        </li>
      </ul>
    </section>

    <!-- Enfoque de Trabajo -->
    <section class="w-full">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-8">
        {t("engineering.approach")}
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.cleanCode")}</h3>
          <p class="text-gray-700">{t("engineering.cleanCodeDesc")}</p>
        </div>

        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.architecture")}</h3>
          <p class="text-gray-700">{t("engineering.architectureDesc")}</p>
        </div>

        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.learning")}</h3>
          <p class="text-gray-700">{t("engineering.learningDesc")}</p>
        </div>

        <div class="border-l-4 border-gray-900 pl-6 py-2">
          <h3 class="text-xl font-bold text-gray-900 mb-2">{t("engineering.collaboration")}</h3>
          <p class="text-gray-700">{t("engineering.collaborationDesc")}</p>
        </div>
      </div>
    </section>

    <!-- Contacto -->
    <section class="w-full text-center border-t-2 border-gray-200 pt-16">
      <h2 class="font-black text-3xl md:text-4xl text-gray-900 mb-4">
        {t("engineering.contactTitle")}
      </h2>
      <div class="flex flex-col items-center gap-3 mt-6">
        <a href={`mailto:${SOCIAL_LINKS.email}`} class="text-lg text-gray-700 hover:text-gray-900">
          <strong>Email:</strong> {SOCIAL_LINKS.email}
        </a>
        <a href={SOCIAL_LINKS.linkedin} target="_blank" rel="noopener noreferrer" class="text-lg text-gray-700 hover:text-gray-900">
          <strong>LinkedIn:</strong> linkedin.com/in/jfranciscorobles
        </a>
        <a href={SOCIAL_LINKS.github} target="_blank" rel="noopener noreferrer" class="text-lg text-gray-700 hover:text-gray-900">
          <strong>GitHub:</strong> github.com/JFranciscoRobles
        </a>
      </div>
      <div class="flex flex-wrap gap-4 mt-8 justify-center">
        <a
          href="/cv.pdf"
          download
          class="inline-flex items-center gap-2 px-8 py-4 bg-gray-900 text-white text-lg font-semibold rounded-lg hover:bg-gray-800 transition-colors shadow-lg hover:shadow-xl"
        >
          {t("engineering.downloadCV")}
        </a>
        <a
          href={`mailto:${SOCIAL_LINKS.email}`}
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-gray-900 border-2 border-gray-200 text-lg font-semibold rounded-lg hover:border-gray-900 transition-colors"
        >
          {t("engineering.scheduleCall")}
        </a>
      </div>
    </section>

  </main>
</Global>

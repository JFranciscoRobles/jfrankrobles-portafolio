---
import { t } from "i18next";

const techStack = [
  {
    category: t("technologies.categories.uiux.name"),
    icon: "üé®",
    description: t("technologies.categories.uiux.desc"),
    technologies: ["Tailwind CSS", "Framer Motion", "Figma", "Responsive Design", "CSS Animations"]
  },
  {
    category: t("technologies.categories.database.name"),
    icon: "üíæ",
    description: t("technologies.categories.database.desc"),
    technologies: ["PostgreSQL", "MySQL", "MongoDB", "Prisma ORM", "Drizzle ORM"]
  },
  {
    category: t("technologies.categories.backend.name"),
    icon: "‚öôÔ∏è",
    description: t("technologies.categories.backend.desc"),
    technologies: ["Node.js", "NestJS", "GraphQL", "tRPC", "WebSockets", "REST APIs"]
  },
  {
    category: t("technologies.categories.frontend.name"),
    icon: "‚öõÔ∏è",
    description: t("technologies.categories.frontend.desc"),
    technologies: ["React.js", "Next.js", "Astro", "TypeScript", "React Native"]
  },
  {
    category: t("technologies.categories.cms.name"),
    icon: "üõ†Ô∏è",
    description: t("technologies.categories.cms.desc"),
    technologies: ["PayloadCMS", "Strapi", "WordPress Headless", "MeiliSearch", "AlgoliaJS"]
  },
  {
    category: t("technologies.categories.deploy.name"),
    icon: "üöÄ",
    description: t("technologies.categories.deploy.desc"),
    technologies: ["Vercel", "Docker", "Git", "CI/CD", "Linux Servers"]
  }
];
---

<!-- Tech Stack Section -->
<section class="py-16 bg-gradient-to-b from-white via-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {t("technologies.title")}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {t("technologies.subtitle")}
      </p>
    </div>

    <!-- Roadmap Visual -->
    <div class="relative">
      <!-- Path/Road Background for Desktop -->
      <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-1 h-full">
        <div class="w-full h-full bg-gradient-to-b from-primary/20 via-primary/40 to-primary/20"></div>
      </div>

      <!-- Stack Items -->
      <div class="space-y-16 md:space-y-24 relative">
        {techStack.map((stack, index) => (
          <div class={`relative flex flex-col md:flex-row items-center gap-8 ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>

            <!-- Connector Node -->
            <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 z-10">
              <div class="w-8 h-8 rounded-full bg-primary border-4 border-white shadow-lg flex items-center justify-center">
                <div class="w-3 h-3 rounded-full bg-white"></div>
              </div>
            </div>

            <!-- Spacer for layout -->
            <div class="hidden md:block flex-1"></div>

            <!-- Stack Card -->
            <div class="w-full md:flex-1">
              <div class="group relative bg-white border-2 border-gray-200 rounded-2xl p-6 hover:border-primary hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">

                <!-- Step Number Badge -->
                <div class="absolute -top-4 left-6 bg-primary text-white px-4 py-1 rounded-full text-sm font-bold shadow-lg">
                  {t("technologies.step")} {index + 1}
                </div>

                <!-- Icon & Category -->
                <div class="flex items-start gap-4 mb-4 mt-2">
                  <div class="w-14 h-14 bg-gradient-to-br from-primary/20 to-primary/10 rounded-xl flex items-center justify-center text-3xl flex-shrink-0 group-hover:scale-110 transition-transform">
                    {stack.icon}
                  </div>
                  <div>
                    <h3 class="text-xl md:text-2xl font-bold text-gray-900 group-hover:text-primary transition">
                      {stack.category}
                    </h3>
                    <p class="text-gray-600 text-sm md:text-base mt-1">
                      {stack.description}
                    </p>
                  </div>
                </div>

                <!-- Technologies Grid -->
                <div class="grid grid-cols-2 gap-2 mt-4 pt-4 border-t border-gray-100">
                  {stack.technologies.map((tech) => (
                    <div class="flex items-center gap-2 text-sm">
                      <svg class="w-4 h-4 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-gray-700 font-medium">{tech}</span>
                    </div>
                  ))}
                </div>


              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- End Point -->
      <div class="hidden md:flex justify-center mt-24">
        <div class="bg-gradient-to-r from-primary to-primary/80 text-white px-8 py-4 rounded-full font-bold text-lg shadow-xl flex items-center gap-3">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          {t("technologies.readyProduction")}
        </div>
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="mt-16 text-center">
      <p class="text-gray-600 mb-4 text-lg">
        {t("technologies.readyToStart")}
      </p>
      <a
        href="mailto:josefrancisco.roblesacosta@gmail.com"
        class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-xl hover:bg-primary/90 font-semibold transition shadow-lg hover:shadow-2xl text-lg"
      >
        {t("technologies.startProject")}
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

---
const technologies = [
  "Next.js",
  "Astro.js",
  "React.js",
  "PayloadCMS",
  "StrapiJS",
  "Wordpress y Headless WP",
  "MySQL",
  "PostgreSQL",
  "MongoDB",
  "MeiliSearch",
  "AlgoliaJS",
  "Tailwind CSS",
  "Clerk",
  "Prisma ORM",
  "Drizzle ORM",
  "Redux",
  "Zustand",
  "GraphQL",
  "tRPC",
  "Vercel",
  "Tu servicio de Hosting",
];
---

<div class="relative w-full overflow-hidden py-4">
  <div class="animate-marquee flex w-max space-x-4">
    {
      technologies.map((name) => (
        <span class="inline-flex items-center rounded-full px-4 py-2 text-sm font-semibold bg-primary/90 text-white shadow-md">
          {name}
        </span>
      ))
    }
    {
      technologies.map((name) => (
        <span class="inline-flex items-center rounded-full bg-primary/90 px-4 py-2 text-sm font-semibold text-white shadow-md">
          {name}
        </span>
      ))
    }
  </div>
</div>

<style>
  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    display: flex;
    animation: marquee 60s linear infinite;
  }
</style>

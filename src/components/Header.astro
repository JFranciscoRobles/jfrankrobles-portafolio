---
import { SITE_TITLE } from "../consts";
import LanguagePicker from "./LanguagePicker.astro";
import { localizePath } from "astro-i18next";
import { t } from "i18next";
---

<header class="sticky top-0 z-50 w-full bg-white border-b border-gray-200 shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Nombre -->
      <div class="flex-shrink-0">
        <a href={localizePath("/")} class="text-xl font-bold text-gray-900 hover:text-primary transition">
          J. Francisco Robles
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:items-center md:space-x-8">
        <a href={localizePath("/")} class="text-gray-700 hover:text-primary font-medium transition">
          {t("nav.home")}
        </a>
        <a href={localizePath("/ingenieria")} class="text-gray-700 hover:text-primary font-medium transition">
          {t("nav.engineering")}
        </a>
        <a href={localizePath("/negocios")} class="text-gray-700 hover:text-primary font-medium transition">
          {t("nav.business")}
        </a>
        <a href={localizePath("/proyectos")} class="text-gray-700 hover:text-primary font-medium transition">
          {t("nav.projects")}
        </a>
        <LanguagePicker />
        <a
          href="mailto:josefrancisco.roblesacosta@gmail.com"
          class="bg-primary text-white px-5 py-2 rounded-lg hover:bg-primary/90 font-medium transition shadow-sm"
        >
          {t("nav.contact")}
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          type="button"
          class="text-gray-700 hover:text-primary focus:outline-none focus:ring-2 focus:ring-primary rounded-lg p-2"
          aria-label="Toggle menu"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-3">
        <a
          href={localizePath("/")}
          class="text-gray-700 hover:text-primary hover:bg-gray-50 px-3 py-2 rounded-lg font-medium transition"
        >
          {t("nav.home")}
        </a>
        <a
          href={localizePath("/ingenieria")}
          class="text-gray-700 hover:text-primary hover:bg-gray-50 px-3 py-2 rounded-lg font-medium transition"
        >
          {t("nav.engineering")}
        </a>
        <a
          href={localizePath("/negocios")}
          class="text-gray-700 hover:text-primary hover:bg-gray-50 px-3 py-2 rounded-lg font-medium transition"
        >
          {t("nav.business")}
        </a>
        <a
          href={localizePath("/proyectos")}
          class="text-gray-700 hover:text-primary hover:bg-gray-50 px-3 py-2 rounded-lg font-medium transition"
        >
          {t("nav.projects")}
        </a>
        <div class="px-3">
          <LanguagePicker />
        </div>
        <a
          href="mailto:josefrancisco.roblesacosta@gmail.com"
          class="bg-primary text-white px-3 py-2 rounded-lg hover:bg-primary/90 font-medium transition text-center"
        >
          {t("nav.contact")}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');

    if (button && menu) {
      button.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    }
  });
</script>

---
import { t } from "i18next";
import { localizePath } from "astro-i18next";
---

<!-- Hero Section -->
<section class="relative overflow-hidden bg-gradient-to-b from-gray-50 to-white py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Texto de presentación -->
      <div class="order-2 md:order-1">
        <div class="inline-block mb-4">
          <span class="bg-primary/10 text-primary px-4 py-2 rounded-full text-sm font-semibold">
            {t("home.badge")}
          </span>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight">
          {t("home.greeting")}
          <span class="text-primary block mt-2">{t("home.name")}</span>
        </h1>

        <p class="mt-6 text-lg md:text-xl text-gray-600 leading-relaxed" set:html={t("home.description1")} />

        <p class="mt-4 text-lg text-gray-600 leading-relaxed" set:html={t("home.description2")} />

        <!-- CTAs para ambas audiencias -->
        <div class="flex flex-wrap gap-4 mt-8">
          <a
            href={localizePath("/ingenieria")}
            class="bg-primary text-white px-8 py-3 rounded-lg hover:bg-primary/90 font-semibold transition shadow-lg hover:shadow-xl"
          >
            {t("home.viewEngineering")}
          </a>
          <a
            href={localizePath("/negocios")}
            class="bg-white text-gray-900 border-2 border-gray-200 px-8 py-3 rounded-lg hover:border-primary hover:text-primary font-semibold transition"
          >
            {t("home.viewBusiness")}
          </a>
        </div>

        <!-- Iconos de redes sociales -->
        <div class="flex gap-4 mt-8">
          <a
            href="https://www.linkedin.com/in/jfranciscorobles/"
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex items-center justify-center w-12 h-12 bg-gray-100 hover:bg-primary rounded-lg transition"
            aria-label="LinkedIn"
          >
            <svg
              class="w-5 h-5 text-gray-700 group-hover:text-white transition"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path d="M16 8a6 6 0 0 1 6 6v6h-4v-6a2 2 0 0 0-4 0v6h-4v-12h4"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>

          <a
            href="https://github.com/JFranciscoRobles"
            target="_blank"
            rel="noopener noreferrer"
            class="group relative flex items-center justify-center w-12 h-12 bg-gray-100 hover:bg-primary rounded-lg transition"
            aria-label="GitHub"
          >
            <svg
              class="w-5 h-5 text-gray-700 group-hover:text-white transition"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <path d="M9 19c-5 2-5-2-7-3"></path>
              <path d="M16 22v-2.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 19.54 4.77a5.07 5.07 0 0 0-.09-3.77s-1.18-.37-3.86 1.48a13.38 13.38 0 0 0-7 0C5.91.63 4.73 1 4.73 1a5.07 5.07 0 0 0-.09 3.77A5.44 5.44 0 0 0 3 9.55c0 5.42 3.3 6.61 6.44 7a3.37 3.37 0 0 0-.94 2.58V22"></path>
            </svg>
          </a>

          <a
            href="mailto:josefrancisco.roblesacosta@gmail.com"
            class="group relative flex items-center justify-center w-12 h-12 bg-gray-100 hover:bg-primary rounded-lg transition"
            aria-label="Email"
          >
            <svg
              class="w-5 h-5 text-gray-700 group-hover:text-white transition"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              viewBox="0 0 24 24"
            >
              <rect x="2" y="4" width="20" height="16" rx="2" ry="2"></rect>
              <path d="M22 6l-10 7L2 6"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Imagen de perfil -->
      <div class="order-1 md:order-2 flex justify-center">
        <div class="relative">
          <!-- Decorative elements -->
          <div class="absolute -inset-4 bg-primary/10 rounded-3xl transform rotate-3"></div>
          <div class="absolute -inset-4 bg-primary/5 rounded-3xl transform -rotate-3"></div>

          <!-- Imagen -->
          <div class="relative">
            <img
              src="/yo.jpg"
              alt="J. Francisco Robles - Software Architect"
              width="400"
              height="400"
              class="relative rounded-2xl object-cover shadow-2xl w-full max-w-md"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Sección "¿A quién ayudo?" -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">
      {t("home.whoIHelp")}
    </h2>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- Tarjeta para Reclutadores/Empresas -->
      <div class="group relative bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-8 hover:shadow-2xl transition-all duration-300 border-2 border-gray-200 hover:border-primary">
        <div class="mb-4">
          <svg class="w-12 h-12 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">
          {t("home.forRecruiters")}
        </h3>
        <p class="text-gray-600 mb-6 leading-relaxed">
          {t("home.forRecruitersDesc")}
        </p>
        <a
          href={localizePath("/ingenieria")}
          class="inline-flex items-center gap-2 text-primary font-semibold hover:gap-3 transition-all"
        >
          {t("home.viewProfile")}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <!-- Tarjeta para Negocios -->
      <div class="group relative bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-8 hover:shadow-2xl transition-all duration-300 border-2 border-gray-200 hover:border-primary">
        <div class="mb-4">
          <svg class="w-12 h-12 text-primary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">
          {t("home.forBusiness")}
        </h3>
        <p class="text-gray-600 mb-6 leading-relaxed">
          {t("home.forBusinessDesc")}
        </p>
        <a
          href={localizePath("/negocios")}
          class="inline-flex items-center gap-2 text-primary font-semibold hover:gap-3 transition-all"
        >
          {t("home.viewServices")}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

---
const { proyecto } = Astro.props;
---

<div
  class="flex flex-col md:flex-row items-center gap-6 p-6 shadow-lg border rounded-2xl bg-white transform transition-transform duration-300 hover:scale-105"
>
  <img
    src={proyecto.portada}
    alt={proyecto.title}
    class="w-64 h-40 object-contain rounded-lg"
  />
  <div class="flex-1">
    <h3 class="text-xl font-bold text-gray-900">{proyecto.title}</h3>
    <p class="text-gray-600 mt-2">{proyecto.description}</p>
    <ul class="mt-2 text-gray-700 list-disc pl-5">
      {proyecto.features.map((feature) => <li key={feature}>{feature}</li>)}
    </ul>
    <div class="mt-4 flex flex-wrap gap-2">
      {
        proyecto.technologies.map((tech) => (
          <span
            key={tech}
            class="bg-gray-200 text-gray-800 px-3 py-1 rounded-full text-sm"
          >
            {tech}
          </span>
        ))
      }
    </div>
    {
      proyecto.href && (
        <a
          href={proyecto.href}
          target="_blank"
          rel="noopener noreferrer"
          class="mt-4 inline-block bg-primary text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary/80 transition"
        >
          Ver proyecto
        </a>
      )
    }
  </div>
</div>
